{
    "name": "deworkerpro/demo-auction",
    "type": "project",
    "license": "BSD-3-Clause",
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "ext-json": "^7.4",
        "doctrine/orm": "^2.7",
        "php-di/php-di": "^6.0",
        "ramsey/uuid": "^3.9",
        "slim/psr7": "^0.6.0",
        "slim/slim": "^4.3",
        "symfony/console": "^5.0",
        "webmozart/assert": "^1.6"
    },
    "require-dev": {
        "overtrue/phplint": "^1.2",
        "phpunit/phpunit": "^8.5",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-html var/coverage",
        "app": "php bin/app.php --ansi"
    }
}
